<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/fondo_item_list_seleccionado"
    android:padding="@dimen/d5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".40"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LaTvNombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".50"
            android:text="TextView"
            android:paddingLeft="@dimen/d10"
            android:gravity="center_vertical"
            android:textSize="@dimen/d20"/>

        <TextView
            android:id="@+id/LaTvPrecio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".50"
            android:text="TextView"
            android:paddingLeft="@dimen/d25"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".60"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LaTvCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:paddingLeft="@dimen/d5"/>

        <TextView
            android:id="@+id/LaTvMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:paddingLeft="@dimen/d5"/>

        <TextView
            android:id="@+id/LaTvMercado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:paddingLeft="@dimen/d5"/>
    </LinearLayout>
</LinearLayout>