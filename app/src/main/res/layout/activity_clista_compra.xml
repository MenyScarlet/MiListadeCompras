<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.melania.milistadecompras.CListaCompraActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/d10"
        android:background="@color/Rosabotones">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_menu"
            android:layout_marginRight="@dimen/d10"
            android:textAllCaps="false"
            android:fontFamily="@font/justbe"
            android:background="@drawable/fondo_btn_amarillo"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_listas_guardadas"
            android:layout_marginLeft="@dimen/d10"
            android:textAllCaps="false"
            android:fontFamily="@font/justbe"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d30"
        android:textSize="@dimen/d15"
        android:hint="Haz click en la tienda para a単adir un Supermercado."
        android:background="@drawable/fondo_blanco"
        android:gravity="center_vertical"
        android:padding="@dimen/d5"
        android:layout_margin="@dimen/d5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@+id/LvListaCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/d5">

            <ImageView
                android:id="@+id/LcBtnA単adir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight=".20"
                app:srcCompat="@mipmap/plus_white"
                android:onClick="clickA単adirArticulo"/>

            <Button
                android:id="@+id/LcBtnGuardar"
                android:layout_width="@dimen/d150"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/LcBtnA単adir"
                android:textAllCaps="false"
                android:layout_weight=".60"
                android:text="@string/btn_guardar"
                android:background="@drawable/fondo_btn_rosa"
                android:textSize="@dimen/d30"
                android:fontFamily="@font/justbe"/>

            <ImageView
                android:id="@+id/LcBtnShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/LcBtnGuardar"
                android:layout_weight=".20"
                app:srcCompat="@mipmap/store" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
